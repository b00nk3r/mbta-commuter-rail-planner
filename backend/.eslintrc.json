{
    "root": true,
    "env": {
      "node": true,
      "es2023": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:n/recommended",
      "plugin:import/recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2023,
      "sourceType": "script"
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [".js", ".json"]
        }
      }
    }
  }